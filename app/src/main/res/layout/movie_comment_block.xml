<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/commentatorPhoto"
        android:layout_width="@dimen/MovieCommentHead"
        android:layout_height="@dimen/MovieCommentHead"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/commentatorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/commentatorPhoto"
        android:singleLine="true"
        android:text="评论者133"
        android:textColor="@color/GrayTextColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/movieCommentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/commentatorName"
        android:layout_below="@+id/commentatorPhoto"
        android:text="饰 杰克船长333333aaaaaaaaaaa啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊凄凄切切群群群群群群群群群群群群群"
        android:textColor="@color/BlackTextColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/commentatorName"
        android:layout_below="@+id/movieCommentContent"
        android:text="05-06"
        android:textColor="@color/GrayTextColor"
        android:textSize="15sp" />

</RelativeLayout>